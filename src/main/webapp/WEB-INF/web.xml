<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">


    <context-param>
        <param-name>resteasy.logger.type</param-name>
        <param-value>SLF4J</param-value>
    </context-param>

    <context-param>
        <param-name>resteasy.resources</param-name>
        <param-value>org.tango.web.server.TangoGateway</param-value>
    </context-param>
    <context-param>
        <param-name>resteasy.servlet.mapping.prefix</param-name>
        <param-value>/rest</param-value>
    </context-param>

    <listener>
        <listener-class>org.jboss.resteasy.plugins.server.servlet.ResteasyBootstrap</listener-class>
    </listener>
    <listener>
        <listener-class>org.tango.web.server.Launcher</listener-class>
    </listener>

    <filter>
        <filter-name>TimeWatcher</filter-name>
        <filter-class>org.tango.web.server.filters.TimeWatcher</filter-class>
    </filter>

    <filter>
        <filter-name>JsonpResponseWrapper</filter-name>
        <filter-class>org.tango.web.server.filters.JsonpResponseWrapper</filter-class>
    </filter>

    <servlet>
        <servlet-name>TangoService</servlet-name>
        <servlet-class>org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TangoService</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>

    <filter-mapping>
        <filter-name>TimeWatcher</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>JsonpResponseWrapper</filter-name>
        <url-pattern>*.jsonp</url-pattern>
    </filter-mapping>

    <servlet>
        <display-name>QueriesServlet</display-name>
        <servlet-name>QueriesServlet</servlet-name>
        <servlet-class>org.tango.web.server.QueriesServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>EventsServlet</servlet-name>
        <servlet-class>org.tango.web.server.EventsServlet</servlet-class>
    </servlet>

    <welcome-file-list>
        <welcome-file>www/apps/mTangoTest/index.html</welcome-file>
    </welcome-file-list>

    <servlet-mapping>
        <servlet-name>QueriesServlet</servlet-name>
        <url-pattern>/queries/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EventsServlet</servlet-name>
        <url-pattern>/events/*</url-pattern>
    </servlet-mapping>
</web-app>
