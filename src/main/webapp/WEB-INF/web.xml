<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <listener>
        <listener-class>hzg.wpn.mtango.server.Launcher</listener-class>
    </listener>

    <filter>
        <filter-name>TimeWatcher</filter-name>
        <filter-class>hzg.wpn.mtango.server.filters.TimeWatcher</filter-class>
    </filter>

    <filter>
        <filter-name>JsonpResponseWrapper</filter-name>
        <filter-class>hzg.wpn.mtango.server.filters.JsonpResponseWrapper</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>TimeWatcher</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>JsonpResponseWrapper</filter-name>
        <url-pattern>*.jsonp</url-pattern>
    </filter-mapping>

    <servlet>
        <display-name>QueriesServlet</display-name>
        <servlet-name>QueriesServlet</servlet-name>
        <servlet-class>hzg.wpn.mtango.server.QueriesServlet</servlet-class>
    </servlet>

    <welcome-file-list>
        <welcome-file>www/apps/mTangoTest/index.html</welcome-file>
    </welcome-file-list>

    <servlet-mapping>
        <servlet-name>QueriesServlet</servlet-name>
        <url-pattern>/queries/*</url-pattern>
    </servlet-mapping>
</web-app>
