<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">


    <context-param>
        <param-name>resteasy.logger.type</param-name>
        <param-value>SLF4J</param-value>
    </context-param>
    <context-param>
        <param-name>resteasy.resources</param-name>
        <param-value>org.tango.web.server.rest.Rest2Tango</param-value>
    </context-param>
    <context-param>
        <param-name>resteasy.providers</param-name>
        <param-value>org.tango.web.server.rest.JsonResponseWriter</param-value>
    </context-param>
    <context-param>
        <param-name>resteasy.servlet.mapping.prefix</param-name>
        <param-value>/rest</param-value>
    </context-param>

    <listener>
        <listener-class>org.jboss.resteasy.plugins.server.servlet.ResteasyBootstrap</listener-class>
    </listener>
    <listener>
        <listener-class>org.tango.web.server.Launcher</listener-class>
    </listener>

    <filter>
        <filter-name>Authentication</filter-name>
        <filter-class>org.tango.web.server.filters.AccessControlFilter</filter-class>
    </filter>

    <filter>
        <filter-name>StopWatch</filter-name>
        <filter-class>org.tango.web.server.filters.TimeWatcher</filter-class>
    </filter>

    <filter>
        <filter-name>JsonpResponseWrapper</filter-name>
        <filter-class>org.tango.web.server.filters.JsonpResponseWrapper</filter-class>
    </filter>

    <servlet>
        <servlet-name>TangoService</servlet-name>
        <servlet-class>org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TangoService</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>

    <filter-mapping>
        <filter-name>Authentication</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>StopWatch</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>JsonpResponseWrapper</filter-name>
        <url-pattern>*.jsonp</url-pattern>
    </filter-mapping>

    <servlet>
        <display-name>QueriesServlet</display-name>
        <servlet-name>QueriesServlet</servlet-name>
        <servlet-class>org.tango.web.server.js.QueriesServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>EventsServlet</servlet-name>
        <servlet-class>org.tango.web.server.js.EventsServlet</servlet-class>
    </servlet>

    <welcome-file-list>
        <welcome-file>www/apps/mTangoTest/index.html</welcome-file>
    </welcome-file-list>

    <servlet-mapping>
        <servlet-name>QueriesServlet</servlet-name>
        <url-pattern>/queries/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EventsServlet</servlet-name>
        <url-pattern>/events/*</url-pattern>
    </servlet-mapping>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Tango RESTful gateway</web-resource-name>
            <url-pattern>/rest/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>mtango-rest</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>Basic Authentication</realm-name>
        <!--<auth-method>FORM</auth-method>
        <form-login-config>
        <form-login-page>/login.html</form-login-page>
        <form-error-page>/fail_login.html</form-error-page>
        </form-login-config>-->
    </login-config>
    <security-role>
        <description>mtango rest api user</description>
        <role-name>mtango-rest</role-name>
    </security-role>
</web-app>
